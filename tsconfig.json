      // "@pe/builder-ui": [
      // "dist/libs/ui"
      // ],
      // "@pe/builder-renderer": [
      // "dist/libs/renderer"
      // ],
      // "@pe/builder-text-editor": [
      // "dist/libs/text-editor"
      // ],
      // "@pe/builder-text-editor-compat": [
      // "dist/libs/text-editor-compat"
      // ],
      // "@pe/builder-editor": [
      // "dist/libs/editor"
      // ]

      //
      // active changes across entire codebase

       "@pe/builder-core": [
         "dist/libs/core"
       ],
       "@pe/builder-ui": [
         "src/modules/ui/src"
       ],
       "@pe/builder-renderer": [
         "src/modules/renderer/src"
       ],
       "@pe/builder-text-editor": [
         "src/modules/text-editor/src"
       ],
       "@pe/builder-text-editor-compat": [
         "src/modules/text-editor-compat/src"
       ],
       "@pe/builder-editor": [
         "src/modules/editor/src"
       ]
